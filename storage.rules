rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access on specific image folders
    // Allow authenticated users to write to them
    match /plant_images/{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }

    match /post_images/{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }

    match /forum_banners/{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }

    // Profile images can only be changed by the user who owns them
    match /profile_images/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
